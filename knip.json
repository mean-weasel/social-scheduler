{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/app/**/route.ts"
  ],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "src/vite-env.d.ts",
    "src/app/**/*"
  ],
  "ignoreDependencies": [
    "@octokit/rest",
    "gh-pages",
    "tsx"
  ],
  "rules": {
    "exports": "off"
  },
  "playwright": {
    "entry": ["e2e/**/*.spec.ts", "playwright.config.ts"]
  },
  "vitest": {
    "entry": ["src/test/**/*.ts", "vitest.config.ts"]
  }
}
